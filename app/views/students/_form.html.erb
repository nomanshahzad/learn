

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@student, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :Student_Name%>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Student Name", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :Roll_Number%>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :roll_num, class: "form-control", placeholder: "Roll Number" %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :Father_Name%>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :father, class: "form-control", placeholder: "Roll Number" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Back", students_path %> ]
        </div>
    </div>
</div>